# =============================================================================
# ZUMODRA PRODUCTION ENVIRONMENT
# =============================================================================
# Copy this file to .env for production deployment:
#   cp .env.prod.example .env
#
# Or in Dokploy/Coolify, paste these values into the Environment Variables UI.
#
# IMPORTANT: Replace ALL placeholder values with real secrets!
# =============================================================================

# =============================================================================
# DJANGO CORE
# =============================================================================
DEBUG=False
SECRET_KEY=<generate-a-strong-secret-key-here>
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# CRITICAL: These values MUST match your PostgreSQL server configuration.
#
# The entrypoint script will log these values on startup:
#   [INFO] Database Configuration (from env):
#   [INFO]   DB_HOST     = your-db-host
#   [INFO]   DB_PORT     = 5432
#   [INFO]   DB_NAME     = zumodra
#   [INFO]   DB_USER     = postgres
#   [INFO]   DB_PASSWORD = [SET]
#
# If you see "password authentication failed", check:
#   1. DB_PASSWORD matches POSTGRES_PASSWORD on your Postgres server
#   2. DB_USER matches POSTGRES_USER on your Postgres server
#   3. DB_NAME (database) exists and user has access
# =============================================================================
DB_HOST=<your-postgres-host>
DB_PORT=5432
DB_NAME=zumodra
DB_USER=postgres
DB_PASSWORD=<your-strong-database-password>

# Legacy names (also supported, but prefer the shorter names above)
# DB_DEFAULT_NAME=zumodra
# DB_DEFAULT_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://<your-redis-host>:6379/0
REDIS_PASSWORD=<your-redis-password-if-any>

# =============================================================================
# RABBITMQ (for Celery)
# =============================================================================
RABBITMQ_USER=zumodra
RABBITMQ_PASSWORD=<your-strong-rabbitmq-password>
CELERY_BROKER_URL=amqp://zumodra:<rabbitmq-password>@<rabbitmq-host>:5672/zumodra

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=<your-smtp-host>
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<your-smtp-username>
EMAIL_HOST_PASSWORD=<your-smtp-password>
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# STRIPE (Live Keys)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_<your-stripe-secret-key>
STRIPE_PUBLIC_KEY=pk_live_<your-stripe-public-key>
STRIPE_WEBHOOK_SECRET=whsec_<your-webhook-secret>

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=yourdomain.com
SITE_URL=https://yourdomain.com

# =============================================================================
# SECURITY (Production - Strict)
# =============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=<your-sentry-dsn>
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<your-grafana-password>

# =============================================================================
# DEMO TENANT (Usually disabled in production)
# =============================================================================
CREATE_DEMO_TENANT=0
